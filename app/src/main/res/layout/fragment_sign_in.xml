<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_mail_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etEmail"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/login_hint_email"
                            android:inputType="textEmailAddress"
                            android:maxLength="@integer/max_email_length"
                            android:paddingBottom="15dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="60dp"
                            android:paddingTop="15dp"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_line_divider"
                        android:layout_marginStart="24dp"
                        android:background="@color/bg_black_1f"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_password_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etPassword"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/login_hint_password"
                            android:inputType="textPassword"
                            android:maxLength="@integer/max_password_length"
                            android:paddingBottom="15dp"
                            android:paddingEnd="50dp"
                            android:paddingStart="60dp"
                            android:paddingTop="15dp"/>

                        <ImageView
                            android:id="@+id/ivTriggerPasswordVisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="20dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="5dp"
                            android:src="@drawable/ic_eye_blue_normal_24dp"
                            tools:ignore="ContentDescription,KeyboardInaccessibleWidget"/>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvForgotPassword"
                style="@style/RobotoRegularCharcoalXXSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:text="@string/forgot_your_password"
                tools:ignore="KeyboardInaccessibleWidget"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_bottom_height"
                android:background="@color/bg_darkCerulean">

                <TextView
                    android:id="@+id/tvSignIn"
                    style="@style/RobotoRegularWhiteXSmallTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/btn_sign_in"
                    android:textAllCaps="true"
                    tools:ignore="KeyboardInaccessibleWidget"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>