<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flToolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvSave"
            style="@style/RobotoRegularWhiteXLargeTextStyle"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="end"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/menu_item_edit"
            tools:ignore="KeyboardInaccessibleWidget"/>

        <TextView
            android:id="@+id/ivTitle"
            style="@style/RobotoRegularWhiteXXXXXLargeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"/>

    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/navigation_bar_height"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_userpic_blue_24dp"/>

            <TextView
                android:id="@+id/tvPickPhoto"
                style="@style/RobotoMediumSeaBlueXXSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:text="@string/set_profile_photo"
                tools:ignore="KeyboardInaccessibleWidget"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_user_blue_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etFirstName"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/sign_up_hint_first_name"
                            android:inputType="textPersonName|textCapSentences"
                            android:maxLength="@integer/max_name_length"
                            android:paddingBottom="10dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="60dp"
                            android:paddingTop="10dp"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_line_divider"
                        android:layout_marginStart="60dp"
                        android:background="@color/bg_black_1f"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_user_blue_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etLastName"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/sign_up_hint_last_name"
                            android:inputType="textPersonName|textCapSentences"
                            android:maxLength="@integer/max_name_length"
                            android:paddingBottom="10dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="60dp"
                            android:paddingTop="10dp"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_line_divider"
                        android:layout_marginStart="60dp"
                        android:background="@color/bg_black_1f"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_mail_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etEmail"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/sign_up_hint_email"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="60dp"
                            android:paddingTop="10dp"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_line_divider"
                        android:layout_marginStart="60dp"
                        android:background="@color/bg_black_1f"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_phone_blue_24dp"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/etPhone"
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/sign_up_hint_phone_number"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="@integer/max_phone_length"
                            android:paddingBottom="10dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="60dp"
                            android:paddingTop="10dp"/>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        tools:ignore="KeyboardInaccessibleWidget">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_password_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            style="@style/RobotoRegularCharcoalXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="50dp"
                            android:layout_marginStart="60dp"
                            android:background="@android:color/transparent"
                            android:text="@string/button_change_password"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_line_divider"
                        android:layout_marginStart="60dp"
                        android:background="@color/bg_black_1f"/>

                    <FrameLayout
                        android:id="@+id/flLogout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_container_height_profile_screen"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        tools:ignore="KeyboardInaccessibleWidget">

                        <ImageView
                            android:layout_width="@dimen/image_size_24"
                            android:layout_height="@dimen/image_size_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_logout_red_24dp"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            style="@style/RobotoRegularRoseMadderXSmallTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="50dp"
                            android:layout_marginStart="60dp"
                            android:background="@android:color/transparent"
                            android:text="@string/button_log_out"/>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>